{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "module": "NodeNext",
    "target": "ES6",
    "jsx": "react",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "baseUrl": "src",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src", "src/types", "**/*.cjs"],
  "exclude": ["node_modules"]
}